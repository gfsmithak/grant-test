//this version actually finds all matches... in my practice file. Doesn't read the trace log though, still working on that part.
int filetest()
{
    string line;
    ifstream inp;
    ofstream out;
    regex pattern("08\\s00\\s00\\s00\\s\\d+");
    
    inp.open("C:\\trace_000001.etl");
    out.open("C:\\results.txt");   
    if (inp.is_open())
    {
        while(inp.good())
        {
           
            getline(inp, line);
            copy(sregex_token_iterator(line.begin(), line.end(), pattern),
            sregex_token_iterator(),
            ostream_iterator<string>(out, "\n"));
       
            
            
            
        }
    }
    inp.close();
    out.close();
    return 0;
}

