Function get-password {

##Generate an 8-character password, includes random number, capital and special character. Kind of a disaster but I didn't have much time,
##and it got the job done so whatever.

$base = invoke-webrequest -uri http://randomword.setgetgo.com/get.php?len=6 -method get | select -expandproperty content
##$base = $base.substring(0,1).toupper()+$base.substring(1).tolower() - use this instead of line 12 to make the first letter always upper case
$SpecialChars=@("!","@","#","$","%","^","&","*")
$Number=get-random -minimum 0 -maximum 9
$Specialchar=$specialchars | get-random
$temp=get-random -minimum 0 -maximum 6
$base = $base.replace(($base.substring($Temp,1)), ($base.substring($temp,1)).toupper())
$base = $base.insert(6, $specialchar)
$base = $base.insert(7, $number)

write-output $base

}
